{
    "name": "kasunvimarshana/autoerp-backend",
    "description": "AutoERP Backend API - Modular Multi-Tenant ERP System",
    "type": "project",
    "keywords": [
        "laravel",
        "erp",
        "multi-tenant",
        "modular",
        "saas"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "darkaonline/l5-swagger": "^8.6",
        "guzzlehttp/guzzle": "^7.8",
        "laravel/framework": "^10.48.23",
        "laravel/sanctum": "^3.3",
        "laravel/tinker": "^2.9",
        "league/fractal": "^0.20.1",
        "pragmarx/google2fa": "^8.0",
        "spatie/laravel-activitylog": "^4.8",
        "spatie/laravel-permission": "^6.4",
        "spatie/laravel-query-builder": "^5.8",
        "stancl/tenancy": "^3.8"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^7.10",
        "phpunit/phpunit": "^10.5",
        "spatie/laravel-ignition": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Modules\\Accounting\\": "modules/Accounting/",
            "Modules\\Core\\": "modules/Core/",
            "Modules\\IAM\\": "modules/IAM/",
            "Modules\\Inventory\\": "modules/Inventory/",
            "Modules\\Purchasing\\": "modules/Purchasing/",
            "Modules\\Sales\\": "modules/Sales/"
        },
        "files": [
            "modules/Core/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Modules\\Core\\Tests\\": "modules/Core/tests/",
            "Modules\\IAM\\Tests\\": "modules/IAM/tests/",
            "Modules\\Inventory\\Tests\\": "modules/Inventory/tests/",
            "Modules\\Sales\\Tests\\": "modules/Sales/tests/",
            "Modules\\Purchasing\\Tests\\": "modules/Purchasing/tests/",
            "Modules\\Accounting\\Tests\\": "modules/Accounting/tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Kasun Vimarshana",
            "email": "kasun@example.com"
        }
    ]
}
