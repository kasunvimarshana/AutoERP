APP_NAME="ModularSaaS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single,daily
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=modular_saas
DB_USERNAME=root
DB_PASSWORD=

# Tenant Database Configuration (for multi-tenancy)
TENANCY_DATABASE_PREFIX=tenant_
TENANCY_DATABASE_SUFFIX=
TENANCY_DATABASE_AUTO_CREATE=true
TENANCY_DATABASE_AUTO_DELETE=false

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=log

# Queue Configuration
QUEUE_CONNECTION=database

# Cache Configuration
CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Filesystem Configuration
FILESYSTEM_DISK=local

# Mail Configuration
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Redis Configuration (recommended for production)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Security & Encryption
BCRYPT_ROUNDS=12
HASH_VERIFY_ALGORITHM=false

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1
SANCTUM_GUARD=web

# Authentication Configuration
AUTH_MODEL=App\Models\User
AUTH_GUARD=web
AUTH_DEFAULT_ROLE=user

# Authentication Rate Limiting
AUTH_LOGIN_MAX_ATTEMPTS=5
AUTH_LOGIN_DECAY_MINUTES=1
AUTH_REGISTER_MAX_ATTEMPTS=5
AUTH_REGISTER_DECAY_MINUTES=1
AUTH_PASSWORD_RESET_MAX_ATTEMPTS=5
AUTH_PASSWORD_RESET_DECAY_MINUTES=1
AUTH_EMAIL_VERIFICATION_MAX_ATTEMPTS=10
AUTH_EMAIL_VERIFICATION_DECAY_MINUTES=1

# Email Verification
AUTH_EMAIL_VERIFICATION_ENABLED=true
AUTH_EMAIL_VERIFICATION_EXPIRES_IN=60

# Password Reset
AUTH_PASSWORD_RESET_EXPIRES_IN=60

# Token Configuration
AUTH_TOKEN_NAME=auth-token
AUTH_TOKEN_EXPIRES_IN=null

# Multi-Tenancy Configuration
CENTRAL_DOMAINS=localhost,127.0.0.1
TENANT_ROUTE_PREFIX=
TENANCY_REDIS_PREFIX_BASE=tenant

# Module Configuration
MODULES_NAMESPACE=Modules
MODULES_STUBS_PATH=stubs/nwidart-stubs
MODULES_ACTIVATORS=file
MODULES_CACHE_ENABLED=false
MODULES_CACHE_LIFETIME=3600

# Monitoring & Analytics (optional)
SENTRY_LARAVEL_DSN=
ANALYTICS_TRACKING_ID=

# Third-party Services
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=
